<?xml version='1.0' encoding='utf-8'?>
<widget id="io.geopanda.brindix" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Brindix Beta</name>
    <description>
        Geodirectorio de bebidas alcoholicas más grande de México
    </description>
    <author email="contacto@geopanda.com.mx" href="http://geopanda.com">
        Geopanda Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <universal-links>
        <host name="https://yx23z.app.goo.gl/" scheme="https" />
        <host name="geo001-c7e20.firebaseapp.com" scheme="https">
            <path url="/__/auth/callback" />
        </host>
    </universal-links>
    <preference name="Orientation" value="portrait" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="ErrorUrl" value="ErrorPage.html" />
</widget>
